                <li>20/5/6</i>
                <li>演者</li>
            </ul>
            <ul class="user_new">
                <li class="chara_icon"><img src ="/free_ico_01.jpg"></li>
                <li>-</li>
                <li>いとしーひと</li>
                <li>制作中</li>
                <li>20/5/6</i>
                <li>企画者</li>
            </ul>

            
            
        <h2>ToDoリスト</h2>
            <ul class="user_todo_title">
                <li>タスク</li>
                <li>期日</li>
                <li>キャラ</li>
                <li>企画</li>
                <li>ToDo</li>
          </ul>
            <% @tasks.each do |task| %>
            <ul class = "user_todo">
             <li><%= task.task_title %></li>
             <li><%= task.deadline.strftime('%m/%d') %></li>
             <li><%= task.chara_name %></li>
             <li><%= link_to("#{task.work_name}","/works/#{task.wrok_id}") %></li>
             <li><%= link_to("確認する","/tasks/#{task.id}/#{task.task_link}")  %></li>
            </ul>
            <% end %>
           </li>
        </ul>
       