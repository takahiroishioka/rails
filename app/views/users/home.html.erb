            <%= link_to("/works/#{@current_user.id}/create_form") do %>
              <li class="admin">企画立ち上げ</li>
            <% end %>
        </ul>
    </li>
    <li class ="main_content">
        <img  class = "baloon_ico" src = "/ico_hiina.png">
