    <li class ="main_content">
        <% @sections.each do |section| %>
            <h1><%= section.section_name %></h1>
            <%= link_to '変更', edit_calender_path(id: params[:id], section_id: section.id) %>
            <% timetables = Timetable.where(work_id: params[:id], section_id: section.id) %>
            <% timetables. each do |timetable| %>
            <ul class = "user_todo">
             <li><%= timetable.title %></li>
             <li><%= timetable.deadline.strftime('%m/%d') %></li>
            </ul>
        <% end %>
        <% end %>
    </li>
</ul>