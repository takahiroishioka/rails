<ul class ="main_layout">
    <li class = "side_menu">
        <ul class ="side_menu_list">
            <%= link_to("/works/#{params[:id]}/create_section_form") do %>
              <li>セクション追加</li>
            <% end %>
            <%= link_to("/works/#{params[:id]}") do %>
