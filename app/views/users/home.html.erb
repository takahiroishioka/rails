                <li>アイコン</li>
                <li>キャラ名</li>
                <li>作品名</li>
                <li>ステータス</li>
                <li>更新日</li>
                <li>ジョブ</li>
            </ul>


            <% @progress.first(2).each do |progress| %>
            <ul class="user_new">
                <li class="chara_icon"><img src ="<%= "#{progress.chara_icon}" %>"></li>
                <li><%= progress.chara_name %></li>
                <li><%= progress.work_name %></li>
                <li><%= progress.work_status %></li>
                <li><%= progress.update_date %></i>
                <li><%= progress.job %></li>
            </ul>
            <% end %>
            
            <ul class="user_new">
                <li class="chara_icon"><img src ="/chara_raplus_05hitotoki.jpg"></li>
                <li>雨音</li>
